# Configurações do Banco de Dados
DATABASE_URL=postgresql://user:password@localhost:5432/krypton_db

# Configurações do Supabase (Recomendado)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Configurações da API Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
USE_BINANCE_API=true

# Configurações do Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
USE_TELEGRAM=true

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Configurações do Servidor
FLASK_ENV=development
FLASK_DEBUG=true
PORT=5000

# URLs do Frontend e Backend
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Configurações do Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token
MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key
MERCADO_PAGO_WEBHOOK_SECRET=your_webhook_secret

# Configurações de Email (Opcional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Configurações de Logs
LOG_LEVEL=INFO
LOG_FILE=logs/krypton.log

# Configurações de Cache
REDIS_URL=redis://localhost:6379/0
USE_REDIS=false

# Configurações de Produção
SSL_DISABLE=true
WORKERS=4