# Configurações para Deploy no Coolify - 1Crypten
# IMPORTANTE: Substitua todos os valores SUBSTITUA_* pelas credenciais reais

# Configurações básicas
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_PORT=5000
SECRET_KEY=SUBSTITUA_POR_UMA_CHAVE_SECRETA_FORTE_PARA_PRODUCAO
JWT_SECRET=SUBSTITUA_POR_UMA_JWT_SECRET_FORTE_PARA_PRODUCAO

# Supabase - OBRIGATÓRIO CONFIGURAR
# Obtenha em: Supabase Dashboard > Settings > API
SUPABASE_URL=SUBSTITUA_PELA_SUA_URL_SUPABASE
SUPABASE_ANON_KEY=SUBSTITUA_PELA_SUA_ANON_KEY_SUPABASE
SUPABASE_SERVICE_ROLE_KEY=SUBSTITUA_PELA_SUA_SERVICE_KEY_SUPABASE
SUPABASE_DATABASE_URL=SUBSTITUA_PELA_SUA_DATABASE_URL_SUPABASE

# Redis - Configure com Redis do Coolify
REDIS_URL=redis://redis:6379/0

# APIs externas - OBRIGATÓRIO PARA FUNCIONAMENTO
# Binance API - Obtenha em: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=SUBSTITUA_PELA_SUA_CHAVE_REAL_BINANCE
BINANCE_SECRET_KEY=SUBSTITUA_PELA_SUA_SECRET_REAL_BINANCE

# Telegram Bot - Obrigatório para notificações
# Crie um bot em: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=SUBSTITUA_PELO_SEU_TOKEN_REAL
TELEGRAM_CHAT_ID=SUBSTITUA_PELO_SEU_CHAT_ID_REAL

# Configurações de produção
CORS_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com
API_BASE_URL=https://api.seu-dominio.com
USE_BINANCE_API=true
USE_SUPABASE=true

# Configurações do servidor
WORKERS=2
TIMEOUT=120
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Logs
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configurações de cache
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Configurações de rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Configurações de monitoramento
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Configurações de segurança
SSL_REQUIRED=true
SECURE_COOKIES=true
SAME_SITE_COOKIES=Lax

# Configurações específicas do Coolify
PORT=5000
HOST=0.0.0.0
PROXY_COUNT=1

# Configurações de backup (opcional)
BACKUP_ENABLED=false
BACKUP_INTERVAL=24

# Configurações de email (opcional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Configurações de analytics (opcional)
ANALYTICS_ENABLED=false
ANALYTICS_KEY=

# Configurações de CDN (opcional)
CDN_URL=
STATIC_URL=/static/

# Configurações de WebSocket (se necessário)
WEBSOCKET_ENABLED=false
WEBSOCKET_PATH=/ws

# Configurações de cron jobs
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=America/Sao_Paulo

# Configurações de debug em produção (manter false)
DEBUG_TOOLBAR=false
PROFILER_ENABLED=false

# Configurações de memória
MAX_MEMORY_USAGE=512MB
GC_THRESHOLD=100

# Configurações de timeout
REQUEST_TIMEOUT=30
DATABASE_TIMEOUT=10
REDIS_TIMEOUT=5

# Configurações de retry
MAX_RETRIES=3
RETRY_DELAY=1

# Configurações de compressão
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Configurações de CORS específicas
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Configurações de sessão
SESSION_TIMEOUT=3600
SESSION_SECURE=true

# Configurações de upload (se necessário)
MAX_UPLOAD_SIZE=10MB
UPLOAD_FOLDER=/tmp/uploads

# Configurações de localização
TIMEZONE=America/Sao_Paulo
LANGUAGE=pt-BR

# Configurações de feature flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_MOBILE_NOTIFICATIONS=true

# Configurações de terceiros (opcional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=